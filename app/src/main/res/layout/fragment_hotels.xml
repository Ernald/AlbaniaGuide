<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="TourCityGuide.">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/luxus_hotel_textView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="15dp"
                android:padding="20dp"
                app:cardBackgroundColor="@color/md_grey_100"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">


                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hotel_inernational"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="181dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/caveat"
                        android:text="Tirana International Hotel"
                        android:textColor="#000"
                        android:textSize="21sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/Fortress_sqaure_mall_textView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="15dp"
                android:padding="20dp"
                app:cardBackgroundColor="@color/md_grey_100"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">


                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/heritage_hotel_textView"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">


                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="110dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hotel_plaza"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="204dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/caveat"
                        android:text="The Plaza "
                        android:textColor="#000"
                        android:textSize="21sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/pc_textView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="15dp"
                android:padding="20dp"
                app:cardBackgroundColor="@color/md_grey_100"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">


                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hotel_colosseo"
                            />

                    </androidx.cardview.widget.CardView>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/caveat"
                        android:text="Hotel Colosseo Tirana"
                        android:textColor="#000"
                        android:textSize="21sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/Nishat_hotel_textView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="15dp"
                android:padding="20dp"
                app:cardBackgroundColor="@color/md_grey_100"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">

                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView4"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hotel_palace"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView

                        android:layout_width="251dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/caveat"
                        android:text="Palace Hotel &amp; Spa Durres"
                        android:textColor="#000"
                        android:textSize="21sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/Avari_hotel_textView"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="15dp"
                android:padding="20dp"
                app:cardBackgroundColor="@color/md_grey_100"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">



                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView5"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hotel_fieri"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="236dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/caveat"
                        android:text="Hotel Fieri "
                        android:textColor="#000"
                        android:textSize="21sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>