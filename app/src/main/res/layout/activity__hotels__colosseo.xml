<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="TourCityGuide.activity_Hotels_Colosseo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/menu_toolbar"
            app:titleTextColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/hotel_colosseo" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/call_icon_image"
                android:layout_width="113dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:maxHeight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/call_ic" />

            <ImageView
                android:id="@+id/web_search_image"
                 android:layout_width="135dp"
                 android:layout_height="50dp"
                 android:layout_toRightOf="@+id/call_icon_image"
                 android:src="@drawable/web_ic"
                 android:scaleType="centerInside"
                 android:adjustViewBounds="true"
                 android:paddingTop="10dp"/>

            <ImageView
                android:id="@+id/google_map_search_image"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:src="@drawable/map_ic"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chicle"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:text="Summary"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chicle"
                android:text="Featuring an on-site restaurant, Hotel Colosseo Tirana offers air conditioned accommodation in Tirana, 1 km from Skenderberg Square. Free WiFi is available.
\n\nEach room is fitted with a flat-screen satellite TV and a minibar. Certain units have a balcony with views of the city. All rooms include a private bathroom equipped with a bath or a shower. Extras include slippers, free toiletries and a hairdryer.
\n\nThe hotel also offers a cocktail and lounge bar. An airport shuttle can be arranged at an additional charge and free parking is provided on request.
\n\nThe National Arts Gallery is 1.3 km away while Sky Tower is 1.5 km from Colosseo Tirana Hotel. The nearest airport is Tirana Airport, 16.3 km from the property.
\n\nCouples particularly like the location — they rated it 9.1 for a two-person trip.
\n\nWe speak your language!"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                />

        </LinearLayout>


    </LinearLayout>



</ScrollView>